extends layout 

block content 
 if note
    h1 Note: 
      div(class='row text-center mt-1')
        div(class='col-8')
          div(class='card')
            div(class='card-body')
              h5(class='card-title') #{note.title}
              h6(class='card-subtitle mb-2 text-muted') #{note.time} + #{note.id}
              p(class='card-text') #{note.body}
              a(type="submit" class="btn btn-secondary" href="/note/" + note.id) View
